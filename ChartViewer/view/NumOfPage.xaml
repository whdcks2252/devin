<Page x:Class="ChartViewer.view.NumOfPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:local="clr-namespace:ChartViewer.view"
      mc:Ignorable="d"
      Title="NumOfPage" Height="389.36" Width="219.75">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Grid.Row="0" FontSize="15" Margin="10,16,36,25" Text="Num Of Page :"/>
            <TextBox Text="{Binding PageNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" FontSize="20" Background="White" Foreground="Black" Margin="123,11,10,63"  >
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding ChageTextNOP}" Key="Enter"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>
        <Grid Grid.Row="1"/>
    </Grid>
</Page>
